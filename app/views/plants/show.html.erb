<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1> <%= @plant.name %></h1>
      <%= @plant.description %>
      <li><% if @plant.photo? %>
          <%= cl_image_tag @plant.photo.path, width: 200, height: 300, crop: :fill %>
        <% end %></li>
      <%= link_to "Edit", edit_plant_path(@plant) %>
      <%= link_to "Back", plants_path %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1> Make a booking</h1>
      <%= simple_form_for [@plant, @booking ] do |f|  %>
      <% if @plant.errors.any? %>
      <% @plant.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <% end %>
      <% if @booking.errors.any? %>
      <% @booking.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <% end %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.button :submit, value: "RÃ©server"
      %>
      <% end %>
    </div>
  </div>
  <div id="map" style="width: 100%; height: 600px;"></div>
</div>


  <% content_for(:after_js) do %>
  <script>
  var styles = [
    {
        "featureType": "poi.business",
        "elementType": "labels.text",
        "stylers": [
            {
                "visibility": "on"
            }
        ]
    }
];
  $(document).ready(function() {
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' } }, function() {
      provider: {
        scrollwheel :false
      }
      markers = handler.addMarkers(<%= raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      if (markers.length == 0) {
        handler.getMap().setZoom(2);
      } else if (markers.length == 1) {
        handler.getMap().setZoom(14);
      }
    });
  })
  </script>
<% end %>

