<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <% @users.errors.full_messages.each do |message| %>
          <%= message  %>
          <% end %>
        <% end %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :description %>
      <%= f.input :photo, as: :attachinary %>
      <%= f.submit "Update Profile" %>
      <% end %>
    </div>
  </div>
</div>
